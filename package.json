{
  "name": "abroadwith-frontend",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "basic-auth-connect": "^1.0.0",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.12",
    "express": "^4.13.3",
    "gsap": "^1.18.0",
    "hammerjs": "^2.0.6",
    "i18next": "^2.0.20",
    "jquery": "^2.2.0",
    "jquery-ui-browserify": "^1.11.0-pre-seelio",
    "materialize-css": "^0.97.5",
    "node-sass": "^3.4.2",
    "nunjucks": "^2.2.0",
    "pickadate": "^3.5.6",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-materialize": "^0.1.0",
    "react-modal": "^0.6.1",
    "react-nouislider": "^1.7.0",
    "react-tap-event-plugin": "^0.2.1",
    "uglify-js": "^2.6.1",
    "wnumb": "^1.0.2"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.min.js",
    "materialize": "./node_modules/materialize-css/bin/materialize.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "materialize": "materialize",
    "autocomplete": "jquery-ui/autocomplete"
  },
  "scripts": {
    "directories": "mkdir build && cd build && mkdir backend",
    "neuralyzer": "rm -rf node_modules build",
    "clean": "rm -rf build",
    "export": "cp -R mockups/* build/backend",
    "sass": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets --include-path node_modules/bourbon-neat/app/assets/stylesheets --output-style compressed -o build/css/ scss/",
    "sass-watch": "node-sass --include-path node_modules/bourbon/app/assets/stylesheets --include-path node_modules/bourbon-neat/app/assets/stylesheets --output-style compressed -w -o build/css/ scss/",
    "bundle": "browserify -t [ babelify --presets [ react ] ]  src/app.js | uglifyjs > build/app.js",
    "build": "npm run clean && npm run directories && npm run export && npm run sass && npm run bundle",
    "start": "node src/server.js",
    "fullstart": "npm run build && npm run start"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/abroadwith/frontend.git"
  },
  "homepage": "https://bitbucket.org/abroadwith/frontend#readme"
}
