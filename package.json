{
  "name": "Abroadwith",
  "description": "Immerse in a new language and culture",
  "author": "Isaac Hinman <isaac@isaachinman.com> (github.com/isaachinman)",
  "license": "UNLICENSED",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/abroadwith/frontend"
  },
  "main": "bin/server.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start-prod\"",
    "start-prod": "better-npm-run start-prod",
    "build": "better-npm-run build",
    "postinstall": "npm run build",
    "lint": "eslint src --fix",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "test": "karma start"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 3000,
        "APIHOST": "https://api.abroadwith.com",
        "APIPORT": 443
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "APIHOST": "https://api.test-abroadwith.com",
        "APIPORT": 443,
        "FACEBOOK_APP_ID": "144997212531478"
      }
    },
    "watch-client": {
      "command": "node config/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src",
        "PORT": 3000,
        "APIPORT": 3030
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config config/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "body-parser": "^1.14.1",
    "compression": "^1.6.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.13.3",
    "file-loader": "^0.9.0",
    "hoist-non-react-statics": "^1.0.3",
    "http-proxy": "^1.12.0",
    "invariant": "^2.2.0",
    "jwt-decode": "^2.1.0",
    "less": "^2.5.3",
    "lru-memoize": "^1.0.0",
    "map-props": "^1.0.0",
    "memobind": "^0.5.0",
    "multireducer": "^3.0.0",
    "piping": "^1.0.0-rc.3",
    "pretty-error": "^2.0.0",
    "react": "^15.3.1",
    "react-bootstrap": "^0.30.2",
    "react-dom": "^15.3.0",
    "react-facebook-login": "^3.1.0",
    "react-fontawesome": "^1.1.0",
    "react-google-login": "^2.1.2",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.0.0",
    "react-router": "2.7.0",
    "react-router-bootstrap": "^0.23.1",
    "react-router-redux": "^4.0.0",
    "redux": "^3.5.2",
    "redux-async-connect": "^1.0.0-rc2",
    "redux-form": "^6.0.1",
    "serialize-javascript": "^1.1.2",
    "superagent": "^2.2.0",
    "url-loader": "^0.5.7",
    "warning": "^3.0.0",
    "webpack-isomorphic-tools": "^2.2.18"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "better-npm-run": "0.0.11",
    "bootstrap-sass": "^3.3.5",
    "bootstrap-sass-loader": "^1.0.9",
    "clean-webpack-plugin": "^0.1.6",
    "concurrently": "^2.2.0",
    "css-loader": "^0.24.0",
    "eslint": "3.3.1",
    "eslint-config-airbnb": "10.0.1",
