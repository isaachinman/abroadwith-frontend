{
  "name": "abroadwith-frontend",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "express": "^4.13.3",
    "basic-auth-connect": "^1.0.0",
    "jquery": "^2.1.4",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "browserify": "^12.0.1",
    "babelify": "^7.2.0",
    "babel-preset-react": "^6.3.13",
    "nunjucks": "^2.2.0",
    "material-design-lite": "^1.0.6",
    "gsap": "^1.18.0",
    "uglify-js": "^2.6.1",
    "node-sass": "^3.4.2"
  },
  "scripts": {
    "directories": "mkdir build && cd build && mkdir backend",
    "neuralyzer": "rm -rf node_modules build",
    "clean": "rm -rf build",
    "export": "cp -R mockups/* build/backend",
    "sass": "node-sass -o build/css/ scss/",
    "sass-watch": "node-sass -w -o build/css/ scss/",
    "bundle:search": "browserify -t [ babelify --presets [ react ] ]  src/search/search.js -o build/search-bundle.js",
    "bundle": "npm run bundle:search",
    "build": "npm run clean && npm run directories && npm run export && npm run sass && npm run bundle",
    "start": "node src/server.js",
    "fullstart": "npm run build && npm run start"
  },
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/abroadwith/frontend.git"
  },
  "homepage": "https://bitbucket.org/abroadwith/frontend#readme"
}
